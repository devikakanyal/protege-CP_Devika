#include <bits/stdc++.h>
using namespace std;

int main ()
{
    
        int n;
        cin>>n ;
        
        int arr[n];
        
        for( int i=0 ; i< n ; i++)
        {
            cin>>arr[i];
        }
        
        //find closest number to 0
        
        int closest=INT_MAX;
        
        for ( int i=0 ; i< n ; i++)
        {
            closest=min( closest , abs(arr[i]-0 ) );
            
        }
        
        cout<<abs(closest)<<endl;
    
}
